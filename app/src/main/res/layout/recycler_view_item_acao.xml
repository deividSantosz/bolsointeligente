<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"

    android:gravity="center_vertical">

    <!-- Ícone -->
    <ImageView
        android:id="@+id/img_acao"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ganho"

        android:padding="8dp"/>

    <!-- Nome da Ação -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/tv_codigo_acao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PETR4"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_nome_empresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Petrobras"
            android:textSize="14sp"
            android:textColor="#888888"/>
    </LinearLayout>

    <!-- Preço -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 36,75"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_variacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2,4%"
            android:textSize="14sp"
            android:textColor="@color/primaria"/>
    </LinearLayout>
</LinearLayout>
